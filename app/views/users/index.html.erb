<h1>Listing users</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>ID</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
  </tr>
  </thead>
    <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.id, user %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= link_to 'Edit', edit_user_path(user), :class => 'btn btn-mini' %>
            <td><%= link_to 'Destroy', user, :method => :delete,
                    :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %></td>
          </tr>
        <% end %>
    </tbody>
</table>

<br />

<%= link_to 'New User', new_user_path, :class => 'btn btn-primary' %>
